{
  "name": "alpha-project",
  "version": "1.0.0",
  "description": "An interactive web-based educational platform designed to improve student engagement and knowledge retention in non-STEM subjects such as languages and geography through teacher-created quizzes.",
  "keywords": [],
  "homepage": "https://github.com/Maisie90/alpha-project#readme",
  "bugs": {
    "url": "https://github.com/Maisie90/alpha-project/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Maisie90/alpha-project.git"
  },
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon -L backend/index.js",
    "start": "node backend/index.js",
    "setup-db": "node ./backend/db/setup.js",
    "test": "jest --watchAll --detectOpenHandles --runInBand --verbose",
    "coverage": "jest --coverage",
    "userUnitTests": "jest --testPathPattern=/__tests__/user/unit/ --watchAll --detectOpenHandles --runInBand --verbose",
    "challengeUnitTests": "jest --testPathPattern=/__tests__/frontend/challenge --watchAll --detectOpenHandles --runInBand --verbose"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "fs": "^0.0.1-security",
    "jsonwebtoken": "^9.0.3",
    "path": "^0.12.7",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.1.11",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "./__tests__/user/integration/local-config.js",
      "./__tests__/user/integration/config.js",
      "./local-database/*",
      "./node_modules/*",
      "./coverage/*"
    ]
  }
}
